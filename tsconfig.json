{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "lib": ["ES2020", "DOM"],
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "skipLibCheck": true

    },
    "include": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "example"
    ]
}
